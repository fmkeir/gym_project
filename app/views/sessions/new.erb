<form action="/sessions" method="post">
<table>
  <tr>
    <td><label for="type">Type:</label><td>
    <td><input type="text" name="type"/></td>
  </tr>
  <tr>
    <td><label for="room_id">Room:</label><td>
    <td>
      <select name="room_id">
        <% for room in @rooms %>
        <option value="<%= room.id%>"><%= room.name %></option>
        <% end %>
      </select>
    </td>
  </tr>
  <tr>
    <td><label for="start_time">Time:</label><td>
    <td><input type="datetime-local" name="start_time" required/></td>
  </tr>
  <tr>
    <td><label for="duration">Duration in minutes:</label><td>
    <td><input type="text" name="duration"/></td>
  </tr>
  <tr>
    <td><label for="trainer">Trainer:</label><td>
    <td><input type="text" name="trainer"/></td>
  </tr>
  <tr>
    <td><label for="days_to_repeat">Number of days to schedule:</label><td>
    <td><input type="number" name="days_to_repeat" min="1" max="7"/></td>
  </tr>
</table> <br/>
<input type="submit" value="Create session"/>
</form>
