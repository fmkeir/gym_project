<form action="/bookings" method="post">
  <table>
    <tr>
      <td><label for="member_id">Member:</label></td>
      <td>
          <select name="member_id">
            <% for member in @members %>
            <option value="<%= member.id%>"><%= member.full_name %></option>
            <% end %>
          </select>
      </td>
    </tr>
    <tr>
      <td><label for="session_id">Session:</label></td>
      <td>
          <select name="session_id">
            <% for session in @sessions %>
            <option value="<%= session.id%>"><%= session.type %> with <%= session.trainer %> on <%= session.start_time %></option>
            <% end %>
          </select>
      </td>
    </tr>
  </table> <br/>

  <input type="submit" value="Create Booking"/>
</form>
